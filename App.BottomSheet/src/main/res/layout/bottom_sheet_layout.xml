<?xml version="1.0" encoding="utf-8"?>
<com.kennyc.bottomsheet.CollapsingView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@android:color/white">

        <TextView
            android:id="@+id/title"
            style="@style/BottomSheet.Title"
            tools:drawableStart="@android:drawable/ic_menu_share"
            tools:drawableLeft="@android:drawable/ic_menu_share"
            tools:text="Title" />

        <GridView
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:listSelector="@drawable/bs_list_selector"
            android:stretchMode="columnWidth"
            tools:listitem="@layout/bottom_sheet_list_item" />

    </LinearLayout>

</com.kennyc.bottomsheet.CollapsingView>